/**************mixins************/

basic_font()
	font-family: arial
	font-weight: 300
	font-size: 14px


clear()
	clear: both
	content: " "
	display: block


m_transition(property, name, effect)
	transition: property name effect 0s
	-moz-transition: property name effect 0s
	-webkit-transition: property name effect 0s
	-webkit-transition-delay:  name 0s

m_scale3d(value1, value2, value3)
	-webkit-transform: scale3d(value1, value2, value3)
	-ms-transform: scale3d(value1, value2, value3)
	transform: scale3d(value1, value2, value3)


m_rotate3d(value1,value2,value3,value4)
	-webkit-transform: rotate3d(value1, value2, value3, value4)
	-ms-transform: rotate3d(value1, value2, value3, value4)
	transform: rotate3d(value1, value2, value3, value4)


transition_timing_function(value1, value2, value3, value4)
	-webkit-transition-timing-function: cubic-bezier(value1, value2, value3, value4)
	transition-timing-function: cubic-bezier(value1, value2, value3, value4)	


m_translate3d(x,y,z) 
	-webkit-transform: translate3d(x, y, z)
	-ms-transform: translate3d(x, y, z)
	transform: translate3d(x, y, z)

transform_origin(parametr1, parametr2)
	-moz-transform-origin: parametr1  parametr2
	-ms-transform-origin: parametr1  parametr2
	-webkit-transform-origin: parametr1  parametr2
	transform-origin: parametr1  parametr2


animation_settings(name, duration, mode)
	-webkit-animation-name: name
	animation-name: name
	-webkit-animation-duration: duration
	animation-duration: duration
	-webkit-animation-fill-mode: mode
	animation-fill-mode: mode

transform_none() 
	-webkit-transform: none; 
	-ms-transform: none;
	transform: none;
	
/**************all***************/

.tabs_container
	
	.current 
		background: #F7F7F7 !important
		color: #4F5559
	


.tabs_container:after
	clear();


.tabs 
	float: left;


.tab 
	background: #36BAE2
	text-align: center	
	float: left
	padding: 16px 20px
	cursor: pointer
	basic_font;
	color: #FFFFFF
	m_transition(all, 0.2s, linear);


.box 
	background: none repeat scroll 0 0 #F7F7F7
	display: none
	width: 96%
	padding: 25px 2% 10px
	float: left
	overflow: hidden


.box_item
	margin-bottom: 15px

	
.visible 
	display: block

.show_tab
	display: block

.horizontal
	.tabs
		float: left
		width: 20%
	
	
	.box
		float: left
		width: 75%
		min-height: 111px
		border-bottom: 1px solid #eee
	
	
	.tab
		display: block
		float: none
		border-bottom: 1px solid #eee
	


.horizontal:after
	clear


/*********************************effects************************************************/

#fade_left_tabs .show_tab .box_item

	-webkit-animation-name: fade_left_tabs
	animation-name: fade_left_tabs
	position: relative

	-webkit-animation-duration: 1s
	animation-duration: 1s
	-webkit-animation-fill-mode: both
	animation-fill-mode: both
	


#fade_right_tabs .show_tab .box_item

	-webkit-animation-name: fade_right_tabs
	animation-name: fade_right_tabs
	position: relative

	-webkit-animation-duration: 1s
	animation-duration: 1s
	-webkit-animation-fill-mode: both
	animation-fill-mode: both


#bounce_taps .show_tab .box_item 
	transform_origin(center, bottom)
	position: relative
	animation_settings(bounce_tabs, 1s, both)


#pulse_tab .show_tab .box_item
	position: relative
	animation_settings(pulse_tabs, 1s, both)


#swing_tab .show_tab .box_item
	position: relative
	animation_settings(swing_tabs, 1s, both)
	transform_origin(top, center)


#zoom_tab .show_tab .box_item
	position: relative
	animation_settings(zoom_tab, 1s, both)


  
