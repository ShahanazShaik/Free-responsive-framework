.active_slide
	
	-webkit-animation-fill-mode: both !important
	animation-fill-mode: both !important



.top_slide .slide, .zoom .slide, .roll .slide, .zoom_down .slide, .rotateX .slide,
.rotateY .slide, .bounceInDown .slide,.bounceInUp .slide, .rotateInUpLeft .slide, .zoomInUp .slide
	opacity: 0


.top_slide .active_slide
	animation(top_slide, 2s, 0)


.zoom .active_slide
	animation(zoom, 1.5s, 0)
	opacity: 1


.roll .active_slide
