.control 

	text-indent: -10000px
	height: 74px
	width: 36px 
	cursor: pointer
	display: block
	position: absolute
	z-index: 2
	top: 50%
	margin-top: -74px
	


.control:before
	transform_rotate(-45deg)


#rightControl:before

	content:''
	height:20px 
	width:20px 
	display:block
	border:5px solid #1493c8
	border-left-width:0
	border-top-width:0
	position:absolute
	top:7px 
	right:7px



#leftControl:before

	content:''
	height:20px 
	width:20px 
	display:block
	border:5px solid #1493c8
	border-right-width:0
	border-bottom-width:0
	position:absolute
	top:7px 
	left:7px


