width_slide = 1000px
height_slide = 780px

transform_rotate(value) 

	-webkit-transform: rotate(value)
	-moz-transform: rotate(value)
	-ms-transform: rotate(value)
	transform: rotate(value)


m_transition(property, name, effect)

	transition: property name effect 0s
	-moz-transition: property name effect 0s
	-webkit-transition: property name effect 0s
	-webkit-transition-delay:  name 0s


transform_rotateY(value) 

	-webkit-transform: rotateY(value)
	-moz-transform: rotateY(value)
	-ms-transform: rotateY(value)
	transform: rotateY(value)


transform_rotateX(value) 

	-webkit-transform: rotateX(value)
	-moz-transform: rotateX(value)
	-ms-transform: rotateX(value)
	transform: rotateX(value)


animation(name, duration, delay)

	-webkit-animation-name: name
	animation-name: name
	
	-webkit-animation-duration: duration
	animation-duration: duration
	
	-webkit-animation-delay: delay
	animation-delay: delay


transform_scale(value) 
		
	-ms-transform: scale(value)
	-moz-transform: scale(value)
	-webkit-transform: scale(value)
	transform: scale(value)


m_translate(x,y) 

	-webkit-transform: translateZ(0px) translate(x, y)
	-ms-transform: translateZ(0px) translate(x, y) 
	transform: translateZ(0px) translate(x, y)
	
m_translate3d(x,y) 
	-webkit-transform: translate3d(x, y, 0)
	-ms-transform: translate3d(x, y, 0)
	transform: translate3d(x, y, 0)

transform_none()
	-webkit-transform: none; 
	-ms-transform: none;
	transform: none;	 
	
transition_timing_function(value1,value2,value3,value4)
	-webkit-transition-timing-function: cubic-bezier(value1, value2, value3, value4)
	transition-timing-function: cubic-bezier(value1, value2, value3, value4)	

transform_origin(parametr1, parametr2)
	-moz-transform-origin: parametr1  parametr2
	-ms-transform-origin: parametr1  parametr2
	-webkit-transform-origin: parametr1  parametr2
	transform-origin: parametr1  parametr2

m_rotate3d(value1,value2,value3,value4)
	-webkit-transform: rotate3d(value1,value2,value3,value4)
	-ms-transform: rotate3d(value1,value2,value3,value4)
	transform: rotate3d(value1,value2,value3,value4)

animation_timing_function(value1,value2,value3,value4)
	-webkit-animation-timing-function: cubic-bezier(value1,value2,value3,value4)
	animation-timing-function: cubic-bezier(value1,value2,value3,value4)

complex_transform(value1,value2,value3,value4,value5,value6)
	-webkit-transform: scale3d(value1, value2, value3) translate3d(value4, value5, value6)
	-ms-transform: scale3d(value1, value2, value3) translate3d(value4, value5, value6)
	transform: scale3d(value1, value2, value3) translate3d(value4, value5, value6)

m_scale3d(value1, value2, value3)
	-webkit-transform: scale3d(value1, value2, value3)
	-ms-transform: scale3d(value1, value2, value3)
	transform: scale3d(value1, value2, value3)

translate3d_rotate3d(value1, value2, value3, value4, value5, value6, value7)
		-webkit-transform: translate3d(value1, value2, value3) rotate3d(value4, value5, value6, value7)
		-ms-transform: translate3d(value1, value2, value3) rotate3d(value4, value5, value6, value7)
		transform: translate3d(value1, value2, value3) rotate3d(value4, value5, value6, value7)
	
